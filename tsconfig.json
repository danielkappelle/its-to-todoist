{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "target": "ES2015",
    "lib": ["ES2015", "DOM"],
    "outDir": "dist/",
    "pretty": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}